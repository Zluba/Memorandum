    <android.support.v7.widget.CardView
        xmlns:card="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"

        android:background="@color/background_alarm_white"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        card:cardElevation="3dp"
        card:cardCornerRadius="2dp"
        card:cardBackgroundColor="@color/background_alarm_white">
        <RelativeLayout
            android:id="@+id/lay_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/img_top"
                android:background="@color/primary"
                android:layout_height="7dip" />
            <TextView
                android:id="@+id/re_tittle"
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_grey"
                android:textSize="21sp"
                android:layout_marginTop="16dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/note_text"
                android:layout_width="476dp"
                android:layout_height="131dp"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-thin"
                android:gravity="top"
                android:paddingLeft="15dp"
                android:text="15.00"
                android:textColor="@color/primary_text_grey"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:layout_alignTop="@+id/re_tittle"
                android:layout_toEndOf="@+id/note_text"
                android:text="Del" />
        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="100dip"
        android:background="@color/mdtp_white"
        android:layout_height="30dip">


        <TextView
            android:layout_width="match_parent"
            android:id="@+id/time_text"
            android:text="2017-12-12   0:00"
            android:paddingLeft="15dp"
            android:ellipsize="marquee"
            android:textColor="@color/mdtp_transparent_black"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:layout_height="match_parent" />



    </RelativeLayout>

    </android.support.v7.widget.CardView>



    </RelativeLayout>
